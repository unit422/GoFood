<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="gofood.gofoodapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StoreActivity"
            android:label="@string/title_activity_store"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/app_name" />
        <activity android:name=".ResetPasswordActivity" />
        <activity
            android:name=".UserDrawerActivity"
            android:label="@string/title_activity_user_drawer" />
        <activity
            android:name=".OrdersActivity"
            android:label="Orders"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OrderingActivity"
            android:label="@string/title_activity_store"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserOrderActivity"
            android:label="@string/title_activity_store"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UserMenuActivity" />
        <activity
            android:name=".OngoingOrder"
            android:label="You have an ongoing order!"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserInfoActivity"
            android:label="Your Info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".OrderInfoActivity"
            android:label="Your Order Info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ChangePassActivity" />
        <activity
            android:name=".OngoingStoreHand"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".StoreSelectStorehand"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>